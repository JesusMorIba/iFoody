<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.VerificationCodeActivity">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_background"
        android:scaleType="centerCrop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/sofia_pro_bold"
                android:text="Verification Code"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/sofia_pro_regular"
                android:text="Please type the verification code sent to prelookstudio@gmail.com"
                android:textColor="#9796A1"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/rounded_editext_white"
                    android:elevation="5dp"
                    android:fontFamily="@font/sofia_pro_medium"
                    android:inputType="number"
                    android:text="5"
                    android:textAlignment="center"
                    android:textColor="@color/primary_color"
                    android:textSize="17sp" />

                <EditText
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/rounded_editext_white"
                    android:elevation="5dp"
                    android:fontFamily="@font/sofia_pro_medium"
                    android:inputType="number"
                    android:padding="20dp"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="@color/primary_color"
                    android:textSize="17sp" />

                <EditText
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/rounded_editext_orange"
                    android:elevation="5dp"
                    android:fontFamily="@font/sofia_pro_medium"
                    android:inputType="number"
                    android:padding="20dp"
                    android:text="6"
                    android:textAlignment="center"
                    android:textColor="@color/primary_color"
                    android:textSize="17sp" />

                <EditText
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/rounded_editext_white"
                    android:elevation="5dp"
                    android:fontFamily="@font/sofia_pro_medium"
                    android:inputType="number"
                    android:padding="20dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/primary_color"
                    android:textSize="17sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/sofia_pro_medium"
                    android:text="I dont't receive a code!"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvForgotP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofia_pro_medium"
                    android:text="Please a resend"
                    android:textColor="@color/primary_color" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="80dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_button_orange"
                android:drawablePadding="10dp"
                android:fontFamily="@font/sofia_pro_bold"
                android:paddingHorizontal="5dp"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>